<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <td><%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image,format: 'jpeg',size: "40x40", fallback: "no_image.jpg" %>
       <% end %></td>
      <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
      <td><%= link_to book.category, search_book_path(keyword: book.category) %></td>

        <td class="favorite-btn"><%= render "favorites/favorite-btn", book: book %></td>
        <td>コメント数: <%= book.book_comments.count %></td>
        <div class="relative-post-evaluation">
        </div>
      </tr>
    <% end %>
  </tbody>
</table>