<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to book.category, search_book_path(keyword: book.category) %>
        </td>
        <td class="favorite-btn"><%= render "favorites/favorite-btn", book: book %></td>
        <td>コメント数: <%= book.book_comments.count %></td>
        <td><div class="detail-value", id="star-<%= book.id %>"></div></td>
          <script>
            $('#star-<%= book.id %>').raty({      //.idでどの評価であるかを取得
              size: 38,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,                             //readOnlyオプションで読み込み専用とする。編集できない。
              score: <%= book.rate %>,              //scoreオプションで評価内容を取得
            });
          </script>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>